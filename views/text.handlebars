	{{#if isSignup}}
		<div class="row">
			<div class="input-field">
				<input id="email" name="email" type="email" class="validate signup" required="" aria-required="true">
				<label for="email">email</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field">
				 <input id="username" name="username" type="text" class="signup" required="" aria-required="true"> 
				<label for="username">username</label>
			</div>
		</div>
		{{else}}
		<div class="row">
			<div class="input-field">
				 <input id="uid" name="uid" type="text" class="signup" required="" aria-required="true" value="{{username}}"> 
				<label for="uid">username</label>
			</div>
		</div>
	{{/if}}
		<div class="row">
			<div class="input-field">
				<input id="password" name="pw" type="password" class="signup pw" required="" aria-required="true">
				<label for="password">password</label>
				<i class="view-password material-icons">visibility</i>
			</div>
		</div>
	{{#if isSignup}}
		<div class="row">
			<div class="input-field">
				<input id="confirm-password" type="password" class="signup pw" required="" aria-required="true">
				<label for="confirm-password">confirm password</label>
				<i class="view-password material-icons">visibility</i>
			</div>
		</div>
		<button type="submit" class="submit-btn btn">Create Account</button>
	    <button type='submit' id='cancel-btnText' class='cancel-btnText btn' value="Delete">Cancel</button>
	   

		{{else}}
			<button type="submit" class="submit-btn btn">Login</button>
			<button type='submit' id='cancel-btnText' class='cancel-btnText btn' value="Delete">Cancel</button>
	{{/if}}
	</form>
	
</div>